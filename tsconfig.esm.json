{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "dist/esm",
    "esModuleInterop": true,
    "jsx": "react",
    "noImplicitAny": false,
    "importHelpers": false,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist"]
}
